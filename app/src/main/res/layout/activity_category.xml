<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="30"
    tools:context=".CategoryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0">


            <TextView
                android:id="@+id/edit_main_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Cancel"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#4A4A4A"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="false"
                android:onClick="closeAddCategoryView"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/add_notebook_image_holder"
                android:layout_width="110dp"
                android:layout_height="146dp"
                android:src="@drawable/notebook_1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:id="@+id/add_notebook_color_chooser_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/add_notebook_image_holder"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="-25dp"
                android:layout_toStartOf="@id/add_notebook_image_holder"
                android:src="@drawable/color_picker" />

            <EditText
                android:id="@+id/cat_title_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@id/add_notebook_image_holder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="#4A4A4A"
                android:hint="Notebook Name"
                />

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/create_cat_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/btn_rounded_3x_primary"
        android:clickable="true"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="32dp"
        app:layout_dodgeInsetEdges="bottom"
        />

    <FrameLayout
        android:id="@+id/color_chooser_botton_sheet"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@color/colorWhite"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_insetEdge="bottom"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_notebook_color_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_1" />

                <ImageView
                    android:id="@+id/add_notebook_color_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_2" />

                <ImageView
                    android:id="@+id/add_notebook_color_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_3" />

                <ImageView
                    android:id="@+id/add_notebook_color_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/add_notebook_color_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_5" />

                <ImageView
                    android:id="@+id/add_notebook_color_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_6" />

                <ImageView
                    android:id="@+id/add_notebook_color_7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_7" />

                <ImageView
                    android:id="@+id/add_notebook_color_8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/add_notebook_color_9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_9" />

                <ImageView
                    android:id="@+id/add_notebook_color_10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_10" />

                <ImageView
                    android:id="@+id/add_notebook_color_11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_11" />

                <ImageView
                    android:id="@+id/add_notebook_color_12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/oval_12" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>